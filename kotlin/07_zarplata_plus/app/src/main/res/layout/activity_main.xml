<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <TextView
            android:id="@+id/textView"
            android:layout_width="238dp"
            android:layout_height="157dp"
            android:layout_marginTop="16dp"
            android:gravity="center"
            android:text="Введи своё имя, раб! \n В организации работают: \n Oleg \n Vasilyi \n Nikolai \n Vladimir"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/textBox"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="28dp"
        android:ems="10"
        android:hint="Имя жаз"
        android:inputType="text"
        app:layout_constraintEnd_toEndOf="@+id/textView"
        app:layout_constraintHorizontal_bias="0.0"
        app:layout_constraintStart_toStartOf="@+id/textView"
        app:layout_constraintTop_toBottomOf="@+id/textView" />

    <TextView
            android:id="@+id/label"
            android:layout_width="216dp"
            android:layout_height="17dp"
            app:layout_constraintEnd_toEndOf="@+id/pass"
            app:layout_constraintStart_toStartOf="@+id/pass"
            app:layout_constraintTop_toBottomOf="@+id/pass"
            android:layout_marginTop="16dp" />

    <Button
            android:id="@+id/but"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Button"
            app:layout_constraintEnd_toEndOf="@+id/textBox"
            app:layout_constraintHorizontal_bias="1.0"
            app:layout_constraintStart_toStartOf="@+id/textBox"
            app:layout_constraintTop_toBottomOf="@+id/label"
            android:layout_marginTop="32dp" />

    <EditText
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:inputType="text"
            android:ems="10"
            android:id="@+id/pass"
            app:layout_constraintStart_toStartOf="@+id/textBox"
            app:layout_constraintEnd_toEndOf="@+id/textBox"
            android:hint="введи порол"
            app:layout_constraintTop_toBottomOf="@+id/textBox"
            android:layout_marginTop="16dp" />

</androidx.constraintlayout.widget.ConstraintLayout>